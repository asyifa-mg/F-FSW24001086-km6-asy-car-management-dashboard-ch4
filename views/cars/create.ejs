<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Manajemen Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/c70c22ecf3.js"
      crossorigin="anonymous"
    ></script>
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="../css/style.css" />
  </head>

  <body>
    <!-- Sidebar -->
    <div class="container">
      <div class="sidebar">
        <div class="user">
          <img src="../images/user1.svg" alt="" />
        </div>
        <div class="menu">
          <ul>
            <li class="active">
              <a href="#">
                <img src="../images/fi_home.svg" alt="" />
                <span class="text">Dashboard</span>
              </a>
            </li>
            <li class="list">
              <a>
                <img src="../images/truck.svg" alt="" />
                <span class="text">Cars</span>
              </a>
              <ul>
                <li><a href="#" class="item">CARS</a></li>
                <li><a href="#" class="item">List Car</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- akhir sidebar -->
      <!-- HEADER -->
      <div class="main">
        <div id="header">
          <nav class="navbar navbar-expand px-3 border-bottom">
            <div>
              <img src="../images/Rectangle 62.svg" alt="" />
            </div>
            <button class="btn">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div
              class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
            >
              <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                <div class="input-group">
                  <input
                    type="search"
                    class="form-control rounded"
                    placeholder="Search"
                    aria-label="Search"
                    aria-describedby="search-addon"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary"
                    data-mdb-ripple-init
                  >
                    search
                  </button>
                </div>
              </form>
              <div class="dropdown">
                <a
                  href="https://icons8.com/icon/4GrGB5l93HFc/expand-arrow"
                  class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                  data-bs-toggle="dropdown"
                  aria-expanded="true"
                >
                  <img
                    src="../images/Group 15.svg"
                    alt=""
                    class="rounded-circle"
                  />
                  <th>Unis Badri</th>
                </a>

                <ul
                  class="dropdown-menu text-small"
                  aria-labelledby="dropdownUser1"
                >
                  <li><a class="dropdown-item" href="#">New project...</a></li>
                  <li><a class="dropdown-item" href="#">Settings</a></li>
                  <li><a class="dropdown-item" href="#">Profile</a></li>
                  <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
              </div>
            </div>
          </nav>
        </div>
        <!-- Akhir header -->
        <!-- Card -->
        <div class="sewa">
          <div class="row">
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <form action="/cars/admin/create" method="POST">
                    <div class="row mt-2 mb-0">
                      <label for="name" class="col-sm-4 col-form-label my-auto"
                        >Nama:</label
                      >
                      <div class="col-sm-7 my-auto">
                        <input
                          type="text"
                          class="form-control"
                          id="name"
                          name="name"
                          placeholder="Avanza"
                          required
                        />
                      </div>
                    </div>

                    <div class="row mt-2 mb-2">
                      <label for="price" class="col-sm-4 col-form-label my-auto"
                        >Sewa Per Hari:</label
                      >
                      <div class="col-sm-7 my-auto">
                        <input
                          type="text"
                          class="form-control"
                          id="price"
                          name="price"
                          placeholder="Rp 0,-"
                          required
                        />
                      </div>
                    </div>

                    <div class="row mt-2 mb-2">
                      <label
                        for="ukuran"
                        class="col-sm-4 col-form-label my-auto"
                        >Ukuran:</label
                      >
                      <div class="col-sm-7 my-auto">
                        <select
                          class="form-select"
                          id="ukuran"
                          name="ukuran"
                          required
                        >
                          <label for="ukuran">Small</label>
                          <option value="Small">Small</option>
                          <option value="Medium">Medium</option>
                          <option value="Large">Large</option>
                        </select>
                      </div>
                    </div>

                    <div class="row mt-2 mb-2">
                      <label for="photo" class="col-sm-4 col-form-label"
                        >Foto:</label
                      >
                      <div class="col-sm-7 my-auto">
                        <div class="input-group">
                          <input
                            type="file"
                            class="form-control"
                            id="photo"
                            name="photo"
                            style="display: none"
                            onchange="document.getElementById('photoPath').value = this.value;"
                            required
                          />
                          <input
                            type="text"
                            class="form-control"
                            id="photoPath"
                            placeholder="http://placeimg.com/640/480/any"
                            readonly
                            aria-describedby="inputGroupFileAddon01"
                          />
                          <button
                            class="btn btn-secondary"
                            type="button"
                            onclick="document.getElementById('photo').click();"
                          >
                            <i class="fas fa-upload"></i>
                          </button>
                        </div>
                        <br />
                        <p>File size max. 2MB</p>
                      </div>
                    </div>
                    <div class="row mb-auto">
                      <div class="col-sm-6 offset-sm-6">
                        <button type="submit" class="btn btn-primary">
                          SAVE
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
