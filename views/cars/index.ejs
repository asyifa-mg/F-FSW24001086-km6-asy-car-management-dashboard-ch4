<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Manajemen Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/c70c22ecf3.js"
      crossorigin="anonymous"
    ></script>
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="../css/style.css" />
  </head>

  <body>
    <!-- Sidebar -->
    <div class="container">
      <div class="sidebar">
        <div class="user">
          <img src="./images/user1.svg" alt="" />
        </div>
        <div class="menu">
          <ul>
            <li class="active">
              <a href="#">
                <img src="./images/fi_home.svg" alt="" />
                <span class="text">Dashboard</span>
              </a>
            </li>
            <li class="list">
              <a>
                <img src="./images/truck.svg" alt="" />
                <span class="text">Cars</span>
              </a>
              <ul>
                <li><a href="#" class="item">CARS</a></li>
                <li><a href="#" class="item">List Car</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- akhir sidebar -->
      <!-- HEADER -->
      <div class="main">
        <div id="header">
          <nav class="navbar navbar-expand px-3 border-bottom">
            <div>
              <img src="./images/Rectangle 62.svg" alt="" />
            </div>
            <button class="btn">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div
              class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
            >
              <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                <div class="input-group">
                  <input
                    type="search"
                    class="form-control rounded"
                    placeholder="Search"
                    aria-label="Search"
                    aria-describedby="search-addon"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary"
                    data-mdb-ripple-init
                  >
                    search
                  </button>
                </div>
              </form>
              <div class="dropdown">
                <a
                  href="https://icons8.com/icon/4GrGB5l93HFc/expand-arrow"
                  class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                  data-bs-toggle="dropdown"
                  aria-expanded="true"
                >
                  <img
                    src="./images/Group 15.svg"
                    alt=""
                    class="rounded-circle"
                  />
                  <th>Unis Badri</th>
                </a>

                <ul
                  class="dropdown-menu text-small"
                  aria-labelledby="dropdownUser1"
                >
                  <li><a class="dropdown-item" href="#">New project...</a></li>
                  <li><a class="dropdown-item" href="#">Settings</a></li>
                  <li><a class="dropdown-item" href="#">Profile</a></li>
                  <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
              </div>
            </div>
          </nav>
        </div>

        <!-- Akhir header -->
        <!-- add car -->
        <div class="">
          <div class="btn-add">
            <a href="/cars/create" class="btn btn-success custom-btn">
              <i class="fas fa-plus"></i> Add New Car
            </a>
          </div>
        </div>

        <!-- list car -->
        <div class="carlist">
          <div class="row">
            <div class="row search__card">
              <% cars.forEach((car) => { %>
              <div class="col-lg-4">
                <div class="card card-spacing">
                  <div class="card-body">
                    <p><strong></strong> <%= car.name %></p>
                    <p><strong></strong> <%= car.price %></p>
                    <p><strong></strong> <%= car.photo %></p>
                    <p><strong></strong> <%= car.updatedAt %></p>
                  </div>
                  <div class="listcar">
                    <form
                      action="/cars/admin/delete/<%= car.id %>"
                      method="POST"
                      style="display: inline"
                    >
                      <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete
                      </button>

                      <a
                        href="/cars/edit/<%= car.id %>"
                        class="btn btn-success"
                      >
                        <i class="fas fa-edit"></i> Edit
                      </a>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Akhir list car -->
    <!-- Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
